@model StudentManagementSystem_MVC.Models.StudentRegistration

@{
    ViewData["Title"] = "Login";
}
<div class="container login-container">
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h3>Login for Form 1</h3>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username *" value="Username" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password *" value="Password" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" class="btnSubmit" value="Login" style="padding:2pxb;" />
                    </div>
                    <div class="col-md-6">
                        <input type="submit" class="btnSubmit" value="Register" style="padding:2px" />
                    </div>
                </div>
                <div class="form-group">
                    <a href="#" class="ForgetPwd">Forget Password?</a>
                </div>
                @ViewBag.Message
            </form>
        </div>
    </div>
</div>